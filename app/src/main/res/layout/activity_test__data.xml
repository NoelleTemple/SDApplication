<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3200967F"
    tools:context=".Test_Data">

    <Button
        android:id="@+id/testall_btn"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginBottom="384dp"
        android:background="#2C009688"
        android:text="Test All"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/test2_btn"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:background="#2C009688"
        android:text="@string/strt_test_2"
        app:layout_constraintBottom_toTopOf="@+id/test3_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test1_btn"
        app:layout_constraintVertical_bias="0.548" />

    <Button
        android:id="@+id/test3_btn"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:background="#2C009688"
        android:text="@string/strt_test_3"
        app:layout_constraintBottom_toTopOf="@+id/testall_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/test1_btn"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:background="#2C009688"
        android:text="@string/strt_test_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/decision_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/test1_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>